# Aliases for utils running in the utils toolbox
alias htop='toolbox run --container utils htop'
alias gtweaks='toolbox run --container utils gnome-tweaks'
alias code='toolbox run --container utils code'
alias radeontop='toolbox run --container utils radeontop'

# Dotfile repo alias
alias dotfiles='/usr/bin/git --git-dir=$HOME/.dotfiles/ --work-tree=$HOME'

# Convenience
alias lla='ll -ah'
alias open='xdg-open'
